<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="de.github.GSGJ.database.entities.Usergroup" table="usergroup">
        <meta attribute="class-description">
            This class contains the usergroup detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="owner" column="owner" type="int"/>
        <property name="users" column="users" type="serializable"/>
    </class>
</hibernate-mapping>